{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["vitest"],
    "lib": ["ES2020", "DOM" ]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules", "tsup.config.ts"]
}